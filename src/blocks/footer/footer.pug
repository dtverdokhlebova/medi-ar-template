-
  const footerMenu = [
    { name: 'Главная', link: 'main.html' },
    { name: 'О нас', link: 'about.html' },
    { name: 'Мероприятия', link: 'events.html' },
    { name: 'Галерея', link: 'gallery.html' },
    { name: 'Контакты', link: 'contacts.html' },
  ]

footer.footer
  .inner
    .footer__wrapper
      a.footer__logo(href='/')
        img(src='../../images/icon_logo_white.png', alt='')
