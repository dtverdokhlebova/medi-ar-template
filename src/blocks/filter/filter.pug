mixin filter(mods)
  -
    const baseName = 'filter'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .filter(class=allMods)&attributes(attributes)
    +search('filter')
    +ui-datepicker('Выбрать дату <span class="text-t-none">мероприятия</span>', 'filter')(data-active-dates="2023-07-01, 2023-07-05, 2023-07-10")
    block
